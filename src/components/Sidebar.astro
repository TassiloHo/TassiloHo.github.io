---
import Location from "./Location.astro";
import Avatar from "./Avatar.astro";
import WorkHistory from "./WorkHistory.astro";
import Education from "./Education.astro";
import SectionHeading from "./SectionHeading.astro";

const { profile, workHistory, education } = Astro.props;
---

<aside
  class="w-full lg:w-1/3 lg:border-r border-line lg:px-6 xl:px-12 print:border-b-4 print:border-primaryLight print:pb-2 relative"
  style="z-index: 10;"
>
  <div class="flex flex-col h-full justify-between">
    <div class="print:flex print:flex-row print:justify-between">
      <div class="flex flex-col print:flex-row-reverse print:gap-4">
        <div class="flex flex-col print:flex-col-reverse">
          <h2
            class="font-light text-primary dark:text-primaryLight text-2xl print:xl leading-none mb-4"
          >
            {profile.profession}
          </h2>
          <h1
            class="font-black text-primaryDark dark:text-gray-100 text-5xl print:text-3xl leading-none break-words mb-6 print:mb-2"
          >
            {profile.name}
          </h1>
        </div>
        {
          profile.image && (
            <Avatar src={profile.image.publicURL} title={profile.name} />
          )
        }
      </div>
      <div class="print:text-right">
        {
          profile.location && (
            <Location
              location={profile.location}
              relocation={profile.relocation}
            />
          )
        }
      </div>
    </div>

    {
      workHistory && (
        <div class="pt-8 pb-8 lg:py-8 print:hidden">
          <WorkHistory history={workHistory} />
        </div>
      )
    }

    {
      education && (
        <div class="pb-8 lg:pb-8 print:hidden">
          <Education education={education} />
        </div>
      )
    }
  </div>
</aside>
